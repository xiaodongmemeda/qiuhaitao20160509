<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <ImageView android:id="@+id/item_img" android:layout_width="100dp"
               android:layout_height="100dp"

    />
    <TextView android:id="@+id/item_text1" android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_alignTop="@id/item_img"
              android:layout_toRightOf="@id/item_img"

    />
    <TextView android:id="@+id/item_text2" android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_alignBottom="@id/item_img"
              android:layout_toRightOf="@id/item_img"
    />
</RelativeLayout>