<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="test.bwei.com.mob_demo_news.MainActivity">

    <ImageView
        android:id="@+id/phone_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@mipmap/close_title_details_normal"
    />
    <TextView
        android:id="@+id/phone_text"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/phone_close"
        android:gravity="center"
        android:text="@string/phone_text"
        android:textSize="22dp"
    />

    <LinearLayout
        android:id="@+id/phone_lin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phone_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/edit_sp"
        android:orientation="horizontal" android:weightSum="1">
        <EditText
            android:id="@+id/phone_edit_n"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="手机号"
            android:padding="10dp"
        />
        <TextView
            android:id="@+id/send_phone1"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="|   "
        />
        <TextView
            android:id="@+id/send_phone"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="发送验证码"
        />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/phone_lin1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phone_lin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/edit_sp"
        android:orientation="horizontal" android:weightSum="1">
        <EditText
            android:id="@+id/phone_edit_y"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入验证码"
            android:padding="10dp"
        />
    </LinearLayout>
    <TextView
        android:id="@+id/phone_text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/phone_lin1"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/wei"
    />
    <LinearLayout
        android:id="@+id/phone_lin3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phone_text1"
        android:layout_centerHorizontal="true"


        android:orientation="horizontal" android:weightSum="1">
        <TextView
            android:id="@+id/phone_text_enter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_sp1"
            android:gravity="center"
            android:padding="10dp"
            android:text="进入头条"
            android:textColor="@color/colorwrite"
            android:textSize="22dp"
        />
    </LinearLayout>
    <TextView
        android:id="@+id/phone_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/phone_lin3"
        android:layout_marginTop="22dp"
        android:gravity="center"
        android:text="账号密码登录"
        android:textColor="@color/colorPrimary"
    />
    <TextView
        android:id="@+id/more_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/phone_up"
        android:layout_marginTop="39dp"
        android:gravity="center"
        android:text="更多登录方式"
    />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
    >
        <ImageView
            android:id="@+id/phone_img1"
            android:src="@mipmap/ic_launcher"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/phone_img2"
            android:src="@mipmap/ic_launcher"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/phone_img3"
            android:src="@mipmap/ic_launcher"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/phone_img4"
            android:src="@mipmap/ic_launcher"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>
</RelativeLayout>
