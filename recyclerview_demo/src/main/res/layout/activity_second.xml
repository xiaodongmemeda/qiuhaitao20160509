<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.recyclerview_demo.SecondActivity"
>
    <Button
        android:id="@+id/second_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="login"
    />
    <Button
        android:id="@+id/second_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="share" android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/second_login" android:layout_toEndOf="@+id/second_login"
        android:layout_marginLeft="32dp" android:layout_marginStart="32dp"/>
    <RelativeLayout
        android:id="@+id/second_rela"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true" android:layout_alignParentStart="true"
        android:layout_below="@+id/second_login">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/second_img"
            android:layout_width="88dp"
            android:layout_height="88dp"
            app:actualImageScaleType="center"
            app:roundAsCircle="true"
            android:src="@mipmap/ic_launcher"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>
        <TextView
            android:id="@+id/second_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="SECONDE_USER"
            android:textSize="22dp" android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/second_img" android:layout_toEndOf="@+id/second_img"
            android:layout_marginLeft="50dp" android:layout_marginStart="50dp"/>
    </RelativeLayout>
</RelativeLayout>
